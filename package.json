{
  "name": "apps-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "start": "node dist/index.js",
    "build": "tsc && tsc-alias"
  },
  "nodemonConfig": {
    "delay": 100,
    "watch": [
      "../../",
      ".env"
    ],
    "ext": "js,ts,ts,json",
    "exec": "tsc --noEmit && tsx -C development index.ts",
    "ignore": [
      "**/dist/**",
      "**/docs/**"
    ]
  },
  "dependencies": {
    "@omniflex/infra-express": "^0.1.0",
    "@omniflex/infra-sqlite": "^0.1.0",
    "@omniflex/infra-swagger-autogen": "2.24.0",
    "@omniflex/infra-winston": "^0.1.0",
    "@omniflex/module-identity-core": "0.1.0",
    "@omniflex/module-identity-express": "0.1.0",
    "@omniflex/module-identity-sequelize-v6": "0.1.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "ms": "^2.1.3",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/ms": "^0.7.34",
    "@types/swagger-ui-express": "^4.1.7"
  }
}
